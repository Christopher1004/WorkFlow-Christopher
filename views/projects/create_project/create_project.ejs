<dialog id="modalComponentes" class="modalComponentes bg-gray-100 pd-3 border border-solid rounded-lg border-gray">
    <div
        class="top flex flex-row flex items-center pd-b-2 border-b border-t-0 border-r-0 border-l-0 mg-b-2 border-solid border-gray">
        <h1 class="text-xl flex flex-1 mg-0 text-white">Adicionar componente</h1>
        <button id="close" class="closemodal" style="background-color: var(--background); border: 0px;"><ion-icon
                name="close-outline" size="large"></ion-icon></button>
    </div>
    <div class="content">
        <div class="row flex flex-row gap-3 mg-b-2">
            <div class="cardComponent" data-component="texto" style="width: 240px;">
                <div class="imgCard overflow-hidden rounded-lg overflow-hidden"
                    style="background-color: black; width: 240px; height: 140px;">
                    <img src="assets/image/createproject/Texto.jpg" alt="">
                </div>
                <div class="infoCard">
                    <h2 class="text-lg font-medium text-white mg-0">Texto Simples</h2>
                    <p class="text-xs text-gray-25 mg-0">Apenas um texto simples para escrever algo</p>
                </div>
            </div>
            <div class="cardComponent" data-component="titulo" style="width: 240px;">
                <div class="imgCard overflow-hidden rounded-lg"
                    style="background-color: black; width: 240px; height: 140px;">
                    <img src="assets/image/createproject/Sessão.jpg" alt="">
                </div>
                <div class="infoCard">
                    <h2 class="text-lg font-medium text-white mg-0">Título</h2>
                    <p class="text-xs text-gray-25 mg-0">Título para os textos e imagens</p>
                </div>
            </div>
        </div>
        <div class="row flex flex-row gap-3 mg-b-2">
            <div class="cardComponent" data-component="imagem" style="width: 240px;">
                <div class="imgCard overflow-hidden rounded-lg"
                    style="background-color: black; width: 240px; height: 140px;">
                    <img src="assets/image/createproject/Imagem.jpg" alt="">
                </div>
                <div class="infoCard">
                    <h2 class="text-lg font-medium text-white mg-0">Imagem</h2>
                    <p class="text-xs text-gray-25 mg-0">Adicione uma imagem do seu projeto</p>
                </div>
            </div>
            <div class="cardComponent" data-component="paleta" style="width: 240px;">
                <div class="imgCard overflow-hidden rounded-lg"
                    style="background-color: black; width: 240px; height: 140px;">
                    <img src="assets/image/createproject/Paleta de cores.jpg" alt="">
                </div>
                <div class="infoCard">
                    <h2 class="text-lg font-medium text-white mg-0">Palete de cores</h2>
                    <p class="text-xs text-gray-25 mg-0">Mostre as cores deste projeto</p>
                </div>
            </div>
        </div>
    </div>
</dialog>
<div id="modalOverlay" class="modalOverlay"></div>
<dialog id="modalSalvarProjeto" class="modal-final bg-gray-100 pd-3 border border-solid rounded-lg border-gray">
    <div
        class="top flex flex-row items-center pd-b-2 border-b border-t-0 border-r-0 border-l-0 mg-b-2 border-solid border-gray">
        <h1 class="text-xl flex flex-1 mg-0 text-white font-medium">Finalizar Projeto</h1>
        <button id="btnFecharModalFinal" class="closemodal" style="background: none; border: none;"><ion-icon
                name="close-outline" size="large"></ion-icon></button>
    </div>
    <div class="content">
        <div class="flex flex-col gap-1">
            <label for="" class="mg-0">Titulo</label>
            <input type="text" id="tituloFinal" placeholder="Título do projeto" class="form-control sm w-full"
                style="margin-bottom: 0px;" />
            <label for="" class="mg-0">Container</label>
            <div id="uploadContainer"
                class="upload-container flex flex-col justify-center items-center text-center border-dashed border-2 border-gray-50 rounded-lg cursor-pointer">
                <ion-icon name="image-outline" size="large"></ion-icon>
                <p class="mg-0">Clique para escolher a imagem de capa</p>
                <img id="previewCapa" style="display: none; max-width: 100%; border-radius: 6px;" />
            </div>
            <input type="file" id="capaFinal" accept="image/*" style="display: none;" />

            <div id="tagsInputContainer" class="flex flex-col gap-0">
                <label for="">Tags</label>
                <div id="tagsInputBox" class="form-control mg-0 pd-0 w-full flex flex-row flex-wrap items-center gap-0">
                    <div id="tagsWrapper" class="flex items-center flex-row flex-wrap mg-0 pd-1">
                        <input type="text" class="tagsInput form-control sm bg-gray-100 flex-1 text-white"
                            id="tagsInput" style="margin-bottom: 0px; box-shadow: none; border: none; outline: none;">
                    </div>
                </div>
                <label for="tagsInput" class="text-xs pd-b-3 text-gray-25 mg-0">
                    Deixe as tags separadas por vírgula ou Enter (ex: design, app, ui, ux)
                </label>
            </div>
            <input type="hidden" id="tagsFinal" name="tagsFinal" />
            <button id="btnSalvarFinal" class="btn btn-purple">Salvar Projeto</button>
        </div>
    </div>
</dialog>

<div id="overlaySalvar" class="modal-overlay-final"></div>
<div id="modalSucesso" class="modal-sucesso hidden">
    <div class="modal-conteudo">
        <h2>Projeto salvo com sucesso!</h2>
    </div>
</div>


