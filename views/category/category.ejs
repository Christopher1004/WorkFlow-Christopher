    </div>
    
    <script>
        function scrollToCategoria(letra) {
            const elemento = document.getElementById(`categoria-${letra}`);
            if (elemento) {
                elemento.scrollIntoView({ behavior: 'smooth' });
            }
        }
    </script>
</body>
